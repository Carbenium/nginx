server {
    listen       [::]:80 ipv6only=off default_server;
    server_name  {{ nginx_fqdn }};

    location ^~ /.well-known/acme-challenge {
        default_type text/plain;
        alias {{ nginx_ledir }}/.well-known/acme-challenge;
    }

{% if nginx_sslonly %}
    return 301 https://$server_name$request_uri;  # enforce https
{% else %}
    include /etc/nginx/base.d/*;
{% endif %}
}

{% if nginx_canonicalize_https %}
server {
{% if nginx_http2.rc == 0 %}
    listen [::]:443 ssl http2 ipv6only=off default_server;
{% if nginx_enable_proxy %}
    listen [::]:444 ssl proxy_protocol http2 ipv6only=off default_server;
    real_ip_header proxy_protocol;

{% endif %}
{% else %}
    listen [::]:443 ssl http2 ipv6only=off default_server;
{% if nginx_enable_proxy %}
    listen [::]:444 ssl proxy_protocol http2 ipv6only=off default_server;
    real_ip_header proxy_protocol;

{% endif %}
{% endif %}
    server_name _;
    ssl                  on;
    ssl_certificate      {{ nginx_fullchain_path }};
    ssl_certificate_key  {{ nginx_key_path }};
    ssl_trusted_certificate {{ nginx_fullchain_path }};
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.4.4;

    ssl_protocols {{ nginx_ssl_protocols }};
    ssl_ciphers '{{ nginx_ssl_ciphers }}';
    ssl_prefer_server_ciphers   on;

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    return 301 https://{{ nginx_fqdn }}$request_uri;
}
{% endif %}

server {
{% if nginx_canonicalize_https %}
    listen [::]:443;
{% else %}
{% if nginx_http2.rc == 0 %}
    listen [::]:443 ssl http2 ipv6only=off default_server;
{% if nginx_enable_proxy %}
    listen [::]:444 ssl proxy_protocol http2 ipv6only=off default_server;
    real_ip_header proxy_protocol;
    set_real_ip_from {{ nginx_proxy_subnet }};
{% endif %}
{% else %}
    listen [::]:443 ssl spdy ipv6only=off default_server;
{% if nginx_enable_proxy %}
    listen [::]:444 ssl proxy_protocol http2 ipv6only=off default_server;
    real_ip_header proxy_protocol;
    set_real_ip_from {{ nginx_proxy_subnet }};
{% endif %}
{% endif %}
{% endif %}

{% if nginx_define_root %}
    root /var/www/html;
{% endif %}

    ssl                  on;
    ssl_certificate      {{ nginx_fullchain_path }};
    ssl_certificate_key  {{ nginx_key_path }};
{% if nginx_clientcert is not defined %}
    ssl_trusted_certificate {{ nginx_fullchain_path }};
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.4.4;
{% endif %}

    ssl_protocols {{ nginx_ssl_protocols }};
    ssl_ciphers '{{ nginx_ssl_ciphers }}';
    ssl_prefer_server_ciphers   on;

    server_name {{ nginx_fqdn }};
    add_header Strict-Transport-Security max-age=15768000;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

{% if nginx_clientcert is defined %}
    ssl_client_certificate {{ nginx_clientcert }};
    ssl_trusted_certificate {{ nginx_clientcert }};
    ssl_verify_client optional;
    ssl_verify_depth 1;
{% endif %}

    location ^~ /.well-known/acme-challenge {
        allow all;
        alias {{ nginx_ledir }}/.well-known/acme-challenge;
    }

    include /etc/nginx/base.d/*;
}
